{
  "name": "toledo-exporters-ecommerce",
  "version": "1.0.0",
  "description": "Full-stack ecommerce website for Toledo Exporters",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "build:prod": "npm run build && echo 'Production build complete!'",
    "start": "node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js"
  },
  "keywords": [
    "ecommerce",
    "sports-wear",
    "fitness-wear"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.6",
    "stripe": "^14.25.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
